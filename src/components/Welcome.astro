---
import imagenConejito from "../assets/conejito.png";
const fecha = "Domingo 25 de Mayo de 2025";
const hora = "10:00 AM";
const lugar = "Salón de Fiestas Dulce Espera, Calle Falsa 123, Salta Capital";
const nombreBebe = "SECRETO";

const whatsappMama =
	"https://wa.me/5493875377584?text=" +
	encodeURIComponent(
		"¡Hola! Confirmo mi asistencia al baby shower 😊 Cantidad de personas que asistimos de mi familia:",
	);

const whatsappPapa =
	"https://wa.me/5493875420042?text=" +
	encodeURIComponent(
		"¡Hola! Confirmo mi asistencia al baby shower 🎉 Cantidad de personas que asistimos de mi familia:",
	);

const regalos = [
	"Pañales (Talle RN / P)",
	"Toallitas húmedas",
	"Baberos",
	"Ropita 3-6 meses",
	"Productos de higiene para bebé",
	"Mantas o toallones",
	"Body de algodón",
	"Juguetes blanditos",
];
---

<html lang="es">
	<head>
		<title>Invitación Baby Shower ✨</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<style>
			#sidebar {
				position: fixed;
				top: 0;
				right: 0;
				width: 300px;
				height: 100%;
				background: var(--card-bg);
				color: var(--text-color);
				padding: 1rem;
				box-shadow: -3px 0 10px rgba(0, 0, 0, 0.2);
				overflow-y: auto;
				transform: translateX(100%);
				transition: transform 0.3s ease-in-out;
				z-index: 999;
			}
			#sidebar.open {
				transform: translateX(0);
			}

			:root {
				--bg-color: #f5f0eb;
				--card-bg: #fffaf7;
				--text-color: #4b3621;
				--button-bg: #d9c3aa;
				--button-hover: #c7b299;
			}

			body.dark-mode {
				--bg-color: #2c1d14;
				--card-bg: #3a2a20;
				--text-color: #f5f0eb;
				--button-bg: #8a6e53;
				--button-hover: #a4876b;
			}

			body {
				background-color: var(--bg-color);
				color: var(--text-color);
				font-family: "Quicksand", sans-serif;
				transition:
					background 0.3s,
					color 0.3s;
				margin: 0;
				padding: 2rem;
			}

			.card {
				background: var(--card-bg);
				padding: 2rem;
				border-radius: 2rem;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
				max-width: 600px;
				margin: 0 auto;
				text-align: center;
			}

			button {
				background-color: var(--button-bg);
				color: var(--text-color);
				border: none;
				border-radius: 10px;
				padding: 0.6rem 1.2rem;
				font-size: 1rem;
				cursor: pointer;
				margin: 0.5rem;
				transition: background 0.3s;
			}

			button:hover {
				background-color: var(--button-hover);
			}

			#themeToggle {
				position: fixed;
				top: 1rem;
				right: 1rem;
				background: none;
				font-size: 1.5rem;
				border: none;
				cursor: pointer;
			}

			.emoji img {
				max-width: 20rem;
				border-radius: 1rem;
				margin: -4.5rem 0;
			}

			@media (max-width: 768px) {
				#sidebar {
					width: 95vw;
					height: auto;
					max-height: 80%;
					bottom: 0;
					top: auto;
					right: 0;
					left: 0;
					border-top-left-radius: 1rem;
					border-top-right-radius: 1rem;
					transform: translateY(100%);
					transition: transform 0.3s ease-in-out;
				}

				#sidebar.open {
					transform: translateY(0);
				}

				body {
					padding: 1rem;
				}

				.card {
					padding: 1.5rem;
					border-radius: 1.2rem;
				}

				.emoji img {
					max-width: 12rem;
					margin: 0;
				}

				h1 {
					font-size: 1.5rem;
				}

				p {
					font-size: 1rem;
				}

				button {
					width: 100%;
					font-size: 1rem;
					margin: 0.4rem 0;
				}

				#sidebar {
					width: 95vw;
					padding: 1.5rem;
				}
			}

			@media (max-width: 400px) {
				h1 {
					font-size: 1.3rem;
				}

				.emoji img {
					max-width: 10rem;
					margin: 0;
				}

				button {
					font-size: 0.95rem;
					padding: 0.5rem 1rem;
				}
			}
		</style>
	</head>
	<body>
		<button id="themeToggle" title="Cambiar tema">🌙</button>
		<div class="card">
			<div class="emoji">
				<img src={imagenConejito.src} alt="Conejito durmiendo" />
			</div>
			<h1>¡Estás invitad@ al Baby Shower de {nombreBebe}!</h1>
			<p><strong>Fecha:</strong> {fecha}</p>
			<p><strong>Hora:</strong> {hora}</p>
			<p><strong>Lugar:</strong> {lugar}</p>
			<p>¡Te esperamos con mucha alegría! 💕</p>

			<div>
				<a
					href={whatsappMama}
					target="_blank"
					rel="noopener noreferrer"
				>
					<button>Confirmar asistencia a la mamá 🤱</button>
				</a>
				<a
					href={whatsappPapa}
					target="_blank"
					rel="noopener noreferrer"
				>
					<button>Confirmar asistencia al papá 🤰</button>
				</a>
			</div>

			<div style="margin-top: 2rem;">
				<button onclick="window.toggleSidebar()"
					>¿No sabés qué regalar? 🎁</button
				>
			</div>
		</div>

		<div id="sidebar">
			<h2>🎀 Lista de cosas útiles</h2>
			<p>
				No es necesario traer regalo, pero si querés ayudarnos, estas
				son algunas cosas que podrían servirnos 💕
			</p>
			<ul>
				{regalos.map((item) => <li>{item}</li>)}
			</ul>
			<button onclick="window.toggleSidebar()">Cerrar</button>
		</div>

		<script>
			window.toggleSidebar = function () {
				const sidebar = document.getElementById("sidebar");
				if (sidebar) {
					sidebar.classList.toggle("open");
				}
			};

			const toggle = document.getElementById("themeToggle");
			toggle!.addEventListener("click", () => {
				document.body.classList.toggle("dark-mode");
				toggle!.textContent = document.body.classList.contains(
					"dark-mode",
				)
					? "☀️"
					: "🌙";
			});
		</script>
	</body>
</html>
